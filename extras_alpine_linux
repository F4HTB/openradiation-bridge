apk update
apk add --no-cache \
  python3 py3-pip py3-gobject3 py3-pydbus \
  dbus dbus-openrc \
  bluez bluez-openrc bluez-tools \
  dos2unix

rc-update add dbus default
rc-update add bluetooth default
rc-service dbus start
rc-service bluetooth start

